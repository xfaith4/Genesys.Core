{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/genesys-core.catalog.schema.json",
  "title": "Genesys Core Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "datasets",
    "endpoints"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "datasets": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "endpoint",
          "itemsPath",
          "paging",
          "retry"
        ],
        "properties": {
          "description": { "type": "string" },
          "endpoint": { "type": "string", "minLength": 1 },
          "itemsPath": { "type": "string", "minLength": 1 },
          "outputFile": { "type": "string", "minLength": 1 },
          "requestBody": {},
          "paging": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "nextUri", "pageNumber", "cursor", "bodyPaging", "transactionResults"]
              },
              "pageParam": { "type": "string", "minLength": 1 },
              "pagePath": { "type": "string", "minLength": 1 },
              "maxPages": { "type": "integer", "minimum": 1 },
              "totalHitsPath": { "type": "string", "minLength": 1 },
              "nextUriPath": { "type": "string", "minLength": 1 },
              "cursorParam": { "type": "string", "minLength": 1 },
              "cursorPath": { "type": "string", "minLength": 1 },
              "transactionIdPath": { "type": "string", "minLength": 1 }
            }
          },
          "retry": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["standard", "rateLimitAware"]
              },
              "maxRetries": { "type": "integer", "minimum": 0 },
              "allowRetryOnPost": { "type": "boolean" }
            }
          },
          "transaction": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "auditTransaction", "transactionResults"]
              },
              "statusEndpointKey": { "type": "string", "minLength": 1 },
              "resultsEndpointKey": { "type": "string", "minLength": 1 },
              "transactionIdPath": { "type": "string", "minLength": 1 },
              "statePath": { "type": "string", "minLength": 1 },
              "terminalStates": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 },
                "minItems": 1
              },
              "fulfilledState": { "type": "string", "minLength": 1 },
              "maxPolls": { "type": "integer", "minimum": 1 },
              "pollIntervalSeconds": { "type": "integer", "minimum": 0 },
              "eventPrefix": { "type": "string", "minLength": 1 },
              "routeParamName": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "endpoints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "key",
          "method",
          "path",
          "itemsPath",
          "paging",
          "retry"
        ],
        "properties": {
          "key": {
            "type": "string",
            "minLength": 1
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "itemsPath": {
            "type": "string",
            "minLength": 1
          },
          "paging": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "nextUri", "pageNumber", "cursor", "bodyPaging", "transactionResults"]
              },
              "pageParam": { "type": "string", "minLength": 1 },
              "pagePath": { "type": "string", "minLength": 1 },
              "maxPages": { "type": "integer", "minimum": 1 },
              "totalHitsPath": { "type": "string", "minLength": 1 },
              "nextUriPath": { "type": "string", "minLength": 1 },
              "cursorParam": { "type": "string", "minLength": 1 },
              "cursorPath": { "type": "string", "minLength": 1 },
              "transactionIdPath": { "type": "string", "minLength": 1 }
            }
          },
          "retry": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["standard", "rateLimitAware"]
              },
              "maxRetries": { "type": "integer", "minimum": 0 },
              "allowRetryOnPost": { "type": "boolean" }
            }
          },
          "transaction": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "auditTransaction", "transactionResults"]
              },
              "statusEndpointKey": { "type": "string", "minLength": 1 },
              "resultsEndpointKey": { "type": "string", "minLength": 1 },
              "transactionIdPath": { "type": "string", "minLength": 1 },
              "statePath": { "type": "string", "minLength": 1 },
              "terminalStates": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 },
                "minItems": 1
              },
              "fulfilledState": { "type": "string", "minLength": 1 },
              "maxPolls": { "type": "integer", "minimum": 1 },
              "pollIntervalSeconds": { "type": "integer", "minimum": 0 },
              "eventPrefix": { "type": "string", "minLength": 1 },
              "routeParamName": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    }
  }
}
