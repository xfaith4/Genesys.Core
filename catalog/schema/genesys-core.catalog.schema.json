{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/genesys-core.catalog.schema.json",
  "title": "Genesys Core Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "datasets",
    "endpoints"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "datasets": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "endpoint",
          "itemsPath",
          "paging",
          "retry"
        ],
        "properties": {
          "description": { "type": "string" },
          "endpoint": { "type": "string", "minLength": 1 },
          "itemsPath": { "type": "string", "minLength": 1 },
          "paging": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "nextUri", "pageNumber", "cursor", "bodyPaging", "transactionResults"]
              }
            }
          },
          "retry": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["standard", "rateLimitAware"]
              }
            }
          },
          "transaction": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "auditTransaction"]
              }
            }
          }
        }
      }
    },
    "endpoints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "key",
          "method",
          "path",
          "itemsPath",
          "paging",
          "retry"
        ],
        "properties": {
          "key": {
            "type": "string",
            "minLength": 1
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "itemsPath": {
            "type": "string",
            "minLength": 1
          },
          "paging": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "nextUri", "pageNumber", "cursor", "bodyPaging", "transactionResults"]
              }
            }
          },
          "retry": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["standard", "rateLimitAware"]
              }
            }
          },
          "transaction": {
            "type": "object",
            "additionalProperties": false,
            "required": ["profile"],
            "properties": {
              "profile": {
                "type": "string",
                "enum": ["none", "auditTransaction"]
              }
            }
          }
        }
      }
    }
  }
}
