{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/genesys-core.catalog.schema.json",
  "title": "Genesys Core Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "datasets",
    "paginationProfiles",
    "retryProfiles",
    "endpoints"
  ],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "datasets": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["endpoint", "itemsPath", "pagingProfile", "retryProfile"],
        "properties": {
          "description": { "type": "string" },
          "endpoint": { "type": "string", "minLength": 1 },
          "itemsPath": { "type": "string", "minLength": 1 },
          "pagingProfile": { "type": "string", "minLength": 1 },
          "retryProfile": { "type": "string", "minLength": 1 },
          "redactionPolicy": { "type": "string" }
        }
      }
    },
    "paginationProfiles": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["none", "nextUri", "pageNumber", "cursor", "bodyPaging", "transactionResults"]
          },
          "transactionIdPath": { "type": "string" }
        }
      }
    },
    "retryProfiles": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["maxAttempts", "baseDelaySeconds", "retryStatusCodes"],
        "properties": {
          "maxAttempts": { "type": "integer", "minimum": 1 },
          "baseDelaySeconds": { "type": "number", "minimum": 0 },
          "retryStatusCodes": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "integer" }
          }
        }
      }
    },
    "endpoints": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["method", "path", "itemsPath", "pagingProfile", "retryProfile"],
        "properties": {
          "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
          "path": { "type": "string", "minLength": 1 },
          "itemsPath": { "type": "string", "minLength": 1 },
          "pagingProfile": { "type": "string", "minLength": 1 },
          "retryProfile": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
