{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/genesys-core.catalog.schema.json",
  "title": "Genesys Core Catalog",
  "type": "object",
  "required": ["version", "datasets", "endpoints"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "generatedAt": { "type": "string" },
    "profiles": { "type": "object" },
    "datasets": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["endpoint", "itemsPath", "paging", "retry"],
        "properties": {
          "description": { "type": "string" },
          "endpoint": { "type": "string", "minLength": 1 },
          "itemsPath": { "type": "string", "minLength": 1 },
          "paging": {
            "type": "object",
            "required": ["profile"],
            "properties": { "profile": { "type": "string", "minLength": 1 } }
          },
          "retry": {
            "type": "object",
            "required": ["profile"],
            "properties": { "profile": { "type": "string", "minLength": 1 } }
          },
          "transaction": {
            "type": "object",
            "required": ["profile"],
            "properties": { "profile": { "type": "string", "minLength": 1 } }
          }
        }
      }
    },
    "endpoints": {
      "oneOf": [
        {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/endpoint" }
        },
        {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "allOf": [
              { "$ref": "#/$defs/endpointValue" }
            ]
          }
        }
      ]
    }
  },
  "$defs": {
    "endpoint": {
      "type": "object",
      "required": ["key", "method", "path", "itemsPath"],
      "properties": {
        "key": { "type": "string", "minLength": 1 },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
        "path": { "type": "string", "minLength": 1 },
        "itemsPath": { "type": "string", "minLength": 1 },
        "paging": { "type": "object" },
        "retry": { "type": "object" },
        "transaction": { "type": "object" }
      }
    },
    "endpointValue": {
      "type": "object",
      "required": ["method", "path", "itemsPath"],
      "properties": {
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
        "path": { "type": "string", "minLength": 1 },
        "itemsPath": { "type": "string", "minLength": 1 },
        "pagingProfile": { "type": "string" },
        "retryProfile": { "type": "string" },
        "transactionProfile": { "type": "string" },
        "paging": { "type": "object" },
        "retry": { "type": "object" },
        "transaction": { "type": "object" }
      }
    }
  }
}
